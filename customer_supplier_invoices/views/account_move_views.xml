<odoo>

    <record model="ir.ui.menu" id="account.menu_finance_entries_accounting_ledgers">
        <field name="name">Libros Contables</field>
    </record>

    <record id="view_tree_account_view" model="ir.ui.view">
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <search string="Empresa">
                <group expand="0" string="Group By">
                    <filter string="Tipo Documento" name="l10n_latam_document_type_id"
                            context="{'group_by': 'l10n_latam_document_type_id'}"/>
                    <filter string="Order Date" name="invoice_date" domain="[]"
                            context="{'group_by': 'invoice_date'}"/>
                    <filter string="Empresa" name="partner_id"
                            context="{'group_by': 'partner_id'}"/>
                </group>
            </search>
            </field>
        </record>

    <record id="view_account_move_partner_invoice_tree" model="ir.ui.view">
        <field name="name">account.move.partner.accounts.tree</field>
        <field name="model">account.move</field>
        <field name="arch" type="xml">
            <tree>
                <field name="active" invisible="True"/>
                <field name="partner_type" string="Tipo" invisible="True"/>
                <field name="l10n_latam_document_type_id" readonly="True"
                       string="Tipo de Documento" domain="[('active', '=', True)]"/>
                <field name="l10n_latam_document_number" readonly="True" string="NÃºmero"/>
                <field name="invoice_date" readonly="True" string="Fecha"/>
                <field name="display_name" string="Titulares"/>
                <field name="vat" string="R.U.T"/>
                <field name="amount_tax" string="I.V.A."/>
                <field name="amount_residual" string="Total"/>
            </tree>
        </field>
    </record>

    <record id="action_sale_invoice" model="ir.actions.act_window">
        <field name="name">Libro de Compra / Venta</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.move</field>
        <field name="view_mode">tree</field>
        <field name="search_view_id" ref="view_tree_account_view"/>
        <field name="view_id" ref="view_account_move_partner_invoice_tree"/>
        <field name="context">{'search_default_l10n_latam_document_type_id': 1,
            'search_default_invoice_date': 1, 'search_default_partner_id': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Sin datos registrados!
            </p>
        </field>
    </record>

</odoo>